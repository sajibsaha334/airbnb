<div class="bg-white">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 sm:py-8 lg:max-w-7xl lg:px-8">
        <h2 class="text-3xl font-medium leading-6 text-gray-900">Wishlist</h2>
        
        <% if @properties.length() > 0 %>
            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
                <% @properties.each do |property| %>
                    <%= render 'properties/property_item', property: property, minimal_details: true %>
                <% end %>
            </div>
        <% else %>
            <div class="mt-20 w-full flex justify-center items-center">
                <h1 class="text-3xl text-gray-600">Your wishlist is empty!</h1>
            </div>
        <% end %>
    </div>
</div>