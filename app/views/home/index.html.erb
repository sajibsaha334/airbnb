<div class="bg-white">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 sm:py-8 lg:max-w-7xl lg:px-8">
        <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            <% @properties.each do |property| %>
                <div class="group relative cursor-pointer">
                    <div class="relative">
                        <div style="height: 200px" class="swiper aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 group-hover:opacity-75">
                            <div class="swiper-wrapper">
                                <% property.images.each do |image| %>
                                    <%= image_tag image, class:"swiper-slide h-full w-full object-cover object-center lg:h-full lg:w-full" %>
                                <% end %>
                            </div>

                            <div class="swiper-button-prev"></div>
                            <div class="swiper-button-next"></div>
                        </div>
                        
                        <% if user_signed_in? %>
                            <div class="absolute right-0 top-0 z-[2] m-3 cursor-pointer">
                                <svg xmlns="http://www.w3.org/2000/svg" 
                                    viewBox="0 0 32 32" 
                                    aria-hidden="true" 
                                    role="presentation" 
                                    focusable="false"
                                    class="block h-6 w-6 stroke-white stroke-2 <%= property.wishlisted_by?(current_user) ? 'fill-primary' : 'fill-none' %>"
                                    style="overflow: visible;"
                                    data-controller="wishlist"
                                    data-user-logged-in="<%= user_signed_in? %>"
                                    data-property-id="<%= property.id %>"
                                    data-user-id="<%= current_user&.id %>"
                                    data-wishlist-id="<%= property.wishlists.find_by(user: current_user)&.id %>"
                                    data-action="click->wishlist#updateWishlistStatus"
                                    data-wishlist-target="icon"
                                    data-status="<%= property.wishlisted_by?(current_user) %>"
                                    >
                                        <path d="M16 28c7-4.73 14-10 14-17a6.98 6.98 0 0 0-7-7c-1.8 0-3.58.68-4.95 2.05L16 8.1l-2.05-2.05a6.98 6.98 0 0 0-9.9 0A6.98 6.98 0 0 0 2 11c0 7 7 12.27 14 17z"></path>
                                </svg>
                            </div>
                        <% end %>
                    </div>
                    <div class="mt-2">
                        <div class="flex justify-between">
                            <h3 class="text-base font-medium text-gray-700">
                                <a href="#">
                                <span aria-hidden="true" class="absolute inset-0"></span>
                                <%= property.city %>, <%= property.country %>
                                </a>
                            </h3>
                            <p class="flex items-center font-light">
                                <svg
                                    class="mr-1 block w-3 h-3 fill-current"
                                    xmlns="http://www.w3.org/2000/svg" 
                                    viewBox="0 0 32 32" 
                                    aria-hidden="true" 
                                    role="presentation" 
                                    focusable="false">
                                    <path fill-rule="evenodd" d="m15.1 1.58-4.13 8.88-9.86 1.27a1 1 0 0 0-.54 1.74l7.3 6.57-1.97 9.85a1 1 0 0 0 1.48 1.06l8.62-5 8.63 5a1 1 0 0 0 1.48-1.06l-1.97-9.85 7.3-6.57a1 1 0 0 0-.55-1.73l-9.86-1.28-4.12-8.88a1 1 0 0 0-1.82 0z"></path>
                                </svg>
                                <%= property.average_final_rating.round(1) %>
                            </p>
                        </div>
                        <p class="mt-0.5 text-sm text-gray-500">Hosted by Sajib</p>
                        <p class="mt-0.5 text-sm text-gray-500">20 - 25 Jan</p>
                        <p class="mt-0.5 text-sm font-light text-gray-500"><span class="font-medium text-black"> <%= humanized_money_with_symbol(property.price) %> </span> night</p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>